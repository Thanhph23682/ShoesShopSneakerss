@model APPDATA.Models.Contact

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContactID" />
            <div class="form-group">
                <label asp-for="ContactName" class="control-label"></label>
                <input asp-for="ContactName" class="form-control" />
                <span asp-validation-for="ContactName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactDescription" class="control-label"></label>
                <input asp-for="ContactDescription" class="form-control" />
                <span asp-validation-for="ContactDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactImageURL" class="control-label"></label>
                <input asp-for="ContactImageURL" class="form-control" />
                <span asp-validation-for="ContactImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

