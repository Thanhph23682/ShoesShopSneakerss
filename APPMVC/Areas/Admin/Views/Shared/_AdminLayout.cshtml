    <style>
        .footer-admin {
            background-color: #000; /* Nền màu đen */
            color: #fff; /* Chữ màu trắng */
            padding: 20px 0; /* Khoảng cách trên dưới */
        }

            .footer-admin a.footer-link {
                color: #f8f9fa; /* Màu chữ cho liên kết */
                text-decoration: none; /* Loại bỏ gạch chân */
            }

                .footer-admin a.footer-link:hover {
                    color: #ffc107; /* Màu chữ khi hover */
                    text-decoration: underline; /* Gạch chân khi hover */
                }

            .footer-admin .small {
                font-size: 0.875rem; /* Kích thước chữ nhỏ */
            }
    </style>


    <!-- Core Vendors JS -->
    <script src="~/adminassets/js/vendors.min.js"></script>
    <!-- page js -->
    <script src="~/adminassets/vendors/chartjs/Chart.min.js"></script>
