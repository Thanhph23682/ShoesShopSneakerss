@model IEnumerable<APPDATA.Models.Payment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-body">
        <a class="btn btn-secondary m-r-5" asp-area="Admin" asp-controller="AdminPayments" asp-action="Create">Create</a>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">ID đơn hàng</th>
                        <th scope="col">Phương thức thanh toán</th>
                        <th scope="col">Mô tả</th>
                        <th scope="col">Ảnh</th>
                    </tr>

                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td scope="row">@item.PaymentID</td>
                                <td scope="row">@item.OrderID</td>
                                <td scope="row">@item.PaymentMethod</td>
                                <td scope="row">@item.PaymentDescription</td>

                                <td>

                                    <a asp-area="Admin" asp-controller="AdminPayments" asp-action="Edit" asp-route-id="@item.PaymentID" class="btn btn-success m-r-5">Edit</a>
                                    <a asp-area="Admin" asp-controller="AdminPayments" asp-action="Details" asp-route-id="@item.PaymentID" class="btn btn-info m-r-5">Details</a>
                                    <a asp-area="Admin" asp-controller="AdminPayments" asp-action="Delete" asp-route-id="@item.PaymentID" class="btn btn-warning m-r-5">Delete</a>

                                </td>
                            </tr>

                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
