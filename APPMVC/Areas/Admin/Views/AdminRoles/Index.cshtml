@model IEnumerable<APPDATA.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
<a class="btn btn-secondary m-r-5" asp-area="Admin" asp-controller="AdminRoles" asp-action="Create">Create</a>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Chức vụ</th>
                <th scope="col">Mô tả</th>
        </tr>
            
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td scope="row">@item.ID</td>
                        <td scope="row">@item.RoleName</td>
                        <td scope="row">@item.Description</td>
                        
                <td>

                    <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-success m-r-5">Edit</a>
                    <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.ID" class="btn btn-info m-r-5">Details</a>
                    <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-warning m-r-5">Delete</a>

                </td>
                    </tr>

                }
            }
        </tbody>
    </table>
           
</div>
</div>
</div>

