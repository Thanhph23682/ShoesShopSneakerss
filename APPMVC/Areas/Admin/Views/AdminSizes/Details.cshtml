@model APPDATA.Models.Size

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header no-gutters has-tab">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Tổng quan</a>
        </li>

    </ul>
</div>
<div class="container-fluid">
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">


            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin size: @Model.NameSize</h4>
                    <div class="table-responsive">
                            <input type="hidden" asp-for="SizeID" />
                            <table class="product-info-table m-t-20">
                                <tbody>
                                    <tr>
                                        <td>Size:</td>
                                        <td class="text-dark font-weight-semibold">@Model.NameSize</td>
                                    </tr>

                                    

                                </tbody>
                            </table>
                    </div>
                </div>
            </div>



        </div>

    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
