@model APPDATA.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <!-- Feather Icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.28.0/feather.min.js" crossorigin="anonymous"></script>

    <!-- Font Awesome (nếu cần) -->
    <script data-search-pseudo-elements defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js" crossorigin="anonymous"></script>

    <!-- Các thư viện khác -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="/js/datatables/datatables-simple-demo.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
<div class="col-auto mb-3">
    <h1 class="page-header-title">
        <div class="page-header-icon">
            <a asp-action="Index" class="btn btn-sm btn-light text-primary">
                <i class="me-1" data-feather="arrow-left"></i>Quay trở lại trang chủ
            </a>
        </div>
    </h1>
</div>

    <div class="container-xl px-4 mt-4">
        <div class="row">
            <!-- Profile Picture Section -->
            <div class="col-md-4 d-flex justify-content-center">
                <div class="card mb-4 shadow-sm" style="background-color: #f8f9fa; border-radius: 8px; width: 100%;">
                    <div class="card-header" style="background-color: #e9f5f9; border-bottom: 2px solid #b6e4f3; padding: 15px 0; text-align: center;">
                        <strong>Ảnh đại diện</strong>
                    </div>
                    <div class="card-body text-center">
                        <!-- Ảnh xem trước-->
                        <img id="imagePreview" class="img-account-profile avar-image-disp rounded-circle mb-2" src="~/images/customers/" alt="Ảnh đại diện xem trước" style="max-width: 150px; max-height: 150px; object-fit: cover;" />
                        <!-- Hướng dẫn chọn ảnh-->
                        <div class="small font-italic text-muted mb-4">Ảnh JPG hoặc PNG</div>
                        <!-- Input để người dùng chọn ảnh -->
                        <input type="file" name="ImageFile" class="form-control" style="border: 2px solid #b6e4f3; border-radius: 6px; padding: 8px;" onchange="previewImage(event)" />
                    </div>
                </div>
            </div>

        <!-- Account Information Section -->
        <div class="col-md-8">
            <div class="card mb-4 shadow-sm" style="background-color: #f8f9fa; border-radius: 8px;">
                <div class="card-header" style="background-color: #e9f5f9; border-bottom: 2px solid #b6e4f3; padding: 15px 0; text-align: center;">
                    <strong>Thông tin tài khoản</strong>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <!-- Role Selection -->
                        <div class="form-group mb-3">
                            <label asp-for="RoleId" class="form-label">Vai trò:</label>
                            <select asp-for="RoleId" class="form-select" style="border: 2px solid #b6e4f3; border-radius: 6px; padding: 8px;">
                                <option selected disabled>Vai trò:</option>
                                @foreach (var role in ViewBag.RoleId)
                                {
                                    <option value="@role.Value">@role.Text</option>
                                }
                            </select>
                        </div>

                        <!-- Customer Full Name -->
                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label">Họ và tên:</label>
                            <input asp-for="FullName" class="form-control" type="text" placeholder="Nhập họ và tên đầy đủ" style="border: 2px solid #b6e4f3; border-radius: 6px;" />
                        </div>

                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email:</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Nhập email" style="border: 2px solid #b6e4f3; border-radius: 6px;" />
                        </div>

                        <!-- Phone Number -->
                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Số điện thoại:</label>
                            <input asp-for="PhoneNumber" class="form-control" type="tel" placeholder="Nhập số điện thoại" style="border: 2px solid #b6e4f3; border-radius: 6px;" />
                        </div>

                        <!-- Address -->
                        <div class="form-group mb-3">
                            <label asp-for="Address" class="form-label">Địa chỉ:</label>
                            <input asp-for="Address" class="form-control" type="text" placeholder="Nhập địa chỉ" style="border: 2px solid #b6e4f3; border-radius: 6px;" />
                        </div>

                        <!-- Password -->
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Mật khẩu:</label>
                            <input asp-for="Password" class="form-control" type="text" placeholder="Nhập mật khẩu" style="border: 2px solid #b6e4f3; border-radius: 6px;" />
                        </div>

                        <!-- BirthDay -->
                        <div class="form-group mb-3">
                            <label asp-for="BirthDay" class="form-label">Ngày sinh:</label>
                            <input asp-for="BirthDay" class="form-control" type="date" style="border: 2px solid #b6e4f3; border-radius: 6px;" />
                        </div>
                            <div class="form-group mb-3">
                                <label asp-for="CreateDate" class="form-label">Ngày tạo:</label>
                                <input asp-for="CreateDate" class="form-control" type="datetime-local" value="@Model.CreateDate?.ToString("yyyy-MM-ddTHH:mm")" style="border: 2px solid #b6e4f3; border-radius: 6px;" readonly />
                            </div>
                        <!-- Status -->
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label">Trạng thái:</label>
                            <input asp-for="Status" class="form-control" type="number" style="border: 2px solid #b6e4f3; border-radius: 6px;" />
                        </div>

                        <!-- Submit Button -->
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Cập nhật tài khoản</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
        function previewImage(event) {
            const file = event.target.files[0];  // Lấy tệp đầu tiên người dùng chọn
            const reader = new FileReader();

            reader.onload = function (e) {
                const preview = document.getElementById('imagePreview');
                preview.src = e.target.result;  // Đặt nguồn hình ảnh cho ảnh xem trước
            };

            if (file) {
                reader.readAsDataURL(file);  // Đọc tệp dưới dạng URL để hiển thị ảnh
            }
        }
    feather.replace();
</script>
</body>
</html>