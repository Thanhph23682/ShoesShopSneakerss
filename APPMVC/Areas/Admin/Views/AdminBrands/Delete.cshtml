@model APPDATA.Models.Brand

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-header no-gutters has-tab">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Tổng quan</a>
        </li>

    </ul>
</div>
<div class="container-fluid">
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">


            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin thương hiệu: @Model.Name</h4>
                    <div class="table-responsive">
                        <form asp-action="Delete" asp-route-id="@Model.BrandId">
                            <input type="hidden" asp-for="BrandId" />
                            <table class="product-info-table m-t-20">
                                <tbody>
                                    <tr>
                                        <td>Tên thương hiệu:</td>
                                        <td class="text-dark font-weight-semibold">@Model.Name</td>
                                    </tr>
                                    

                                    <tr>
                                        <td>Xác nhận xóa thương hiệu</td>
                                        <td>
                                            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>



        </div>

    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
