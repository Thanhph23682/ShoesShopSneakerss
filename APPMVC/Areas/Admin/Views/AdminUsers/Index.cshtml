@model IEnumerable<APPDATA.Models.User>

@{
    ViewData["Title"] = "Danh sách tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <script data-search-pseudo-elements defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.28.0/feather.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="/js/datatables/datatables-simple-demo.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <!-- Thêm thẻ <body> ở đây -->

    <div class="container-fluid px-4">
        <!-- Header -->
        <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
            <div class="container-fluid px-4">
                <div class="page-header-content">
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="col-auto mb-3 d-flex align-items-center">
                            <div class="page-header-icon me-3">
                                <i data-feather="user"></i> <!-- Biểu tượng "user" sẽ luôn hiển thị -->
                            </div>
                            <h4 class="page-header-title m-0">
                                Danh sách tài khoản quản trị
                            </h4>
                        </div>

                        <div class="col-12 col-xl-auto mb-3">
                            <!-- Nút "Thêm tài khoản mới" -->
                            <a asp-action="Create" class="btn btn-sm btn-primary">
                                <i data-feather="user-plus"></i> Thêm tài khoản mới
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

       

        <!-- Main content -->
        <div class="card mb-4">
            <div class="card-body">
                <table id="userTable" class="table ">
                    <thead>
                        <tr>
                            <th>Chức vụ</th>
                            <th>Họ và tên</th>
                            <th>Tài khoản</th>
                            <th>Số điện thoại</th>
                            <th>Mật khẩu</th>
                            <th>Ảnh đại diện</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Role.RoleName</td>
                                    <td>@item.FullName</td>
                                    <td>@item.UserName</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        <span class="password-text" style="display: none;">@item.Password</span>
                                        <span class="password-mask">********</span>
                                        <button class="btn btn-sm btn-link toggle-password" type="button">
                                            <i class="fa fa-eye"></i>
                                        </button>
                                    </td>

                                    <td>
                                        <img src="~/images/User/@item.Image" alt="Image" width="200" height="200" />

                                    </td>
                                    <td>@item.Role.Description</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-datatable btn-icon btn-transparent-dark me-2">
                                                <i data-feather="edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-datatable btn-icon btn-transparent-dark" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">
                                                <i data-feather="trash-2"></i>
                                            </a>

                                        </div>
                                    </td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-primary">Không có tài khoản nào trong hệ thống</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <style>
        /* CSS cho thanh tìm kiếm ngang */
        .dataTables_filter {
            display: flex;
            justify-content: flex-end; /* Đặt thanh tìm kiếm ở bên phải */
            padding-bottom: 10px;
            align-items: center; /* Canh giữa các phần tử bên trong */
        }

            .dataTables_filter input {
                display: inline-block;
                width: 200px; /* Kích thước của ô tìm kiếm */
                height: 32px;
                padding: 5px 10px;
                font-size: 14px;
                margin-left: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .dataTables_filter label {
                margin-right: 10px; /* Khoảng cách giữa label và ô input */
            }

            /* Đảm bảo thanh tìm kiếm có thể căn chỉnh với các phần tử khác */
            .dataTables_filter input:focus {
                border-color: #007bff; /* Đổi màu khi focus */
            }

        /* CSS cho thanh tìm kiếm ngang */
        .dataTables_filter {
            text-align: right; /* Căn phải cho thanh tìm kiếm */
            padding-bottom: 10px;
        }

        .table td, .table th {
            vertical-align: middle; /* Căn giữa các phần tử trong bảng */
        }

        /* Cải thiện khoảng cách phần main content */
        .card-body {
            margin-top: -15px; /* Đẩy phần nội dung chính lên một chút */
        }

            .dataTables_filter input {
                display: inline-block;
                width: auto;
                height: 32px;
                padding: 5px 10px;
                font-size: 14px;
                margin-left: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

        /* Tùy chỉnh kiểu hiển thị của thanh tìm kiếm */
        .dataTables_wrapper .dataTables_filter {
            display: inline-block;
            margin-bottom: 10px;
            margin-left: auto;
            margin-right: auto;
        }

        /* CSS cho các biểu tượng hành động */
        .btn-datatable.btn-icon.btn-transparent-dark i {
            color: #6c757d;
            font-size: 1.2rem;
        }

        .btn-datatable.btn-icon.btn-transparent-dark:hover i {
            color: #007bff;
        }
        /* Đặt biểu tượng con mắt cố định */
        .toggle-password {
            padding: 0;
            border: none;
            background: none;
            color: #6c757d; /* Màu xám nhẹ */
            cursor: pointer;
        }

            /* Căn chỉnh con mắt */
            .toggle-password i {
                font-size: 1.2rem; /* Kích thước icon */
            }

        /* Giữ nguyên bố cục ô */
        .position-relative {
            position: relative;
        }

        .password-text, .password-mask {
            display: inline-block;
            margin-right: 2rem; /* Chừa khoảng trống cho con mắt */
        }
        /* Màu xám cho các biểu tượng */
        .btn-datatable.btn-icon.btn-transparent-dark i {
            color: #6c757d; /* Màu xám nhẹ */
            font-size: 1.2rem; /* Điều chỉnh kích thước nếu cần */
        }

        /* Màu khi hover */
        .btn-datatable.btn-icon.btn-transparent-dark:hover i {
            color: #007bff; /* Màu xanh lam khi hover */
        }

        .btn-datatable.btn-icon.btn-transparent-dark {
            background: none; /* Loại bỏ nền */
            box-shadow: none; /* Loại bỏ bóng */
            border: none; /* Loại bỏ viền */
        }
    </style>

    @section Scripts {
        <!-- DataTables and Feather Icons -->
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script>
                    $(document).ready(function () {
                // Bắt sự kiện khi nhấn vào nút con mắt
                $('.toggle-password').click(function () {
                    const passwordText = $(this).siblings('.password-text');
                    const passwordMask = $(this).siblings('.password-mask');
                    const icon = $(this).find('i');

                    // Kiểm tra trạng thái hiển thị
                    if (passwordText.is(':visible')) {
                        // Đang hiển thị, chuyển sang ẩn
                        passwordText.hide();
                        passwordMask.show();
                        icon.removeClass('fa-eye-slash').addClass('fa-eye');
                    } else {
                        // Đang ẩn, chuyển sang hiển thị
                        passwordText.show();
                        passwordMask.hide();
                        icon.removeClass('fa-eye').addClass('fa-eye-slash');
                    }
                });
            });
            $(document).ready(function () {
                $('#userTable').DataTable({
                    paging: true,
                    searching: true,
                    info: true,
                    lengthMenu: [5, 10, 20],
                    language: {
                        lengthMenu: "Hiển thị _MENU_ bản ghi mỗi trang",
                        zeroRecords: "Không tìm thấy kết quả",
                        info: "Hiển thị _START_ đến _END_ của _TOTAL_ bản ghi",
                        infoEmpty: "Không có dữ liệu",
                        search: "Tìm kiếm:",
                        paginate: {
                            first: "",
                            last: "",
                            next: "",
                            previous: ""
                        }
                    }
                });
                feather.replace(); // Load Feather icons
            });

        </script>
    }
</body> <!-- Đảm bảo thẻ <body> được đóng -->
</html>
